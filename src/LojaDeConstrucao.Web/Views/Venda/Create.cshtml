@model LojaDeConstrucao.Web.ViewsModels.VendaViewModel
@using LojaDeConstrucao.Web.ViewsModels
@{
    ViewData["Title"] = "Vendas";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Sales</h3>
        <a href="/Venda/Create" class="btn btn-primary">Nova</a>
    </div>
</div>
<div class="row form-wrapper">
    <div class="col-md-12">
        <form id="form" class="form-horizontal" asp-action="Create" asp-controller="Venda" 
            data-ajax="true" data-ajax-method="POST" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/Venda/Create'"
            asp-anti-forgery>
            <div class="form-group">
                <label class="col-md-2 control-label">Nome do Cliente</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" asp-for="NomeCliente" >    
                    <span asp-validation-for="NomeCliente" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Produto</label>
                <div class="col-md-2">
                    <select id="product" class="form-control" asp-for="IdProduto" asp-items="@(new SelectList(@Model.Produtos,"Id","Nome"))">
                        <option value="NoValue"></option>
                    </select>
                    <span class="text-danger" asp-validation-for="IdProduto"></span>    
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Quantidade</label>
                <div class="col-md-8">
                    <input id="quantity" type="text" class="form-control" asp-for="Quantidade" >
                    <span class="text-danger" asp-validation-for="Quantidade"></span>    
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button class="btn btn-success">Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
}