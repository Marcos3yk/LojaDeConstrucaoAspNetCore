@model IEnumerable<LojaDeConstrucao.Web.ViewsModels.ProdutoViewModel>
@{
    ViewData["Title"] = "Produto";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Products</h3>
        <a href="/Produto/CreateOrEdit" class="btn btn-primary">Novo</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <tbody>
                @if(@Model != null)
                {
                    foreach(var viewModel in @Model)
                    {
                        <tr>
                            <td>
                                <a class="name">@viewModel.Nome</a>
                            </td>
                            <td>
                                <a class="name">@viewModel.NomeCategoria</a>
                            </td>
                            <td>
                                <a href="/Produto/CreateOrEdit/@viewModel.Id" class="btn">Edit</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>